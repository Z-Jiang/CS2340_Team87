<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.gatech.cs2340.coffeespill.oasis">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity android:name=".Controllers.HomeScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controllers.LoginActivity" />
        <activity android:name=".Controllers.RegisterActivity" />
        <activity android:name=".Controllers.UserInfoActivity"
            android:parentActivityName=".Controllers.ShelterListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.ShelterListActivity" />
        </activity>
        <activity android:name=".Controllers.SearchActivity"
            android:parentActivityName=".Controllers.ShelterListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.ShelterListActivity" />
        </activity>
        <activity android:name=".Controllers.ShelterListActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".Controllers.ShelterDescriptionActivity"
            android:parentActivityName=".Controllers.ShelterListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.ShelterListActivity" />
        </activity>
    </application>

</manifest>